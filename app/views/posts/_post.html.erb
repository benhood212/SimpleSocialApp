<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>Username:</strong>
    <% if post.user.present? %>
      <%= post.user.username %>
    <% else %>
      Anonymous
    <% end %>
  </p>
</div>
